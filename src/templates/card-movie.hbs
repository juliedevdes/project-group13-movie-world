{{!-- {{#each this}} --}}
<div class='card-movie'>
  <img class='card-movie__img' src='https://image.tmdb.org/t/p/w300{{poster_path}}' alt='{{original_title}}' />
  <div class='card-movie__section'>
    <h1 class='card-movie__title'>{{original_title}}</h1>
    <div>
      <ul class='movie__description list'>
        <li class='movie__description--item'>Vote / Votes</li>
        <li class='movie__description--item'>Popularity</li>
        <li class='movie__description--item'>Original Title</li>
        <li class='movie__description--item'>Genre</li>
      </ul>
      <ul class='movie__info list'>
        <li class='movie__info--item'>{{vote_average}} / {{vote_count}}</li>
        <li class='movie__info--item'>{{popularity}}</li>
        <li class='movie__info--item'>{{original_title}}</li>
        <li class='movie__info--item'>{{genres}}</li>
      </ul>
    </div>
    <h2 class='card-movie__about'>About</h2>
    <p class='card-movie__overview'>{{overview}}</p>
    <div>
      <button type="button" class='card-movie-btn btn-watch button' data-id='{{id}}'>add to Watched</button>
      <button class='card-movie-btn btn-queue button'>add to queue</button>
    </div>
  </div>
</div>
{{!-- {{/each}} --}}
